<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="16dp"
    android:paddingHorizontal="45dp"
    android:id="@+id/parent_login"

    android:background="@drawable/img"
    tools:context=".LoginActivity">

    <TextView
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        android:text="Selamat Datang"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ss_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center_horizontal"
        android:text="Diaplikasi Sistem Pemetaan Lokasi"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ss_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center_horizontal"
        android:text="Penduduk Kota Blitar"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/ss_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/username_login"
        android:elevation="1dp"
        android:inputType="textPersonName"
        android:layout_marginTop="45dp"
        android:paddingHorizontal="20dp"
        android:drawableEnd="@drawable/icon_user_login"
        android:drawableRight="@drawable/icon_user_login"
        android:background="@drawable/btn_circle"
        android:hint="Username"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <EditText
        android:id="@+id/password_login"
        android:elevation="1dp"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:drawableEnd="@drawable/icon_lock_login"
        android:drawableRight="@drawable/icon_lock_login"
        android:background="@drawable/btn_circle"
        android:hint="Password"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <TextView
        android:id="@+id/tv_bantuan"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:textColor="@color/colorPrimary"
        android:paddingRight="10dp"
        android:text="Butuh Bantuan?"
        android:fontFamily="@font/ss_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="25dp"
        android:layout_gravity="end"
        android:textAllCaps="false"
        android:background="@drawable/btn_circle_gradient"
        android:drawableRight="@drawable/right_arrow"
        android:text="Masuk"
        android:paddingHorizontal="30dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progress_login"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Tidak memiliki akun? "
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/ss_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_register"
            android:text="REGISTRASI"
            android:fontFamily="@font/ss_regular"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>